<a href='/urls'> <h1> TinyApp </h1> </a>
<br>
<% if (typeof user !== "undefined") { %>
  <h3>
    😆 Hi <%= user.email %>, do you want to
    <form class="form-inline" style="display:inline-block;" action="/logout" method="POST">
      <button type="submit" class="btn btn-danger">Logout</button>
    </form>
    ?
  </h3>
  <br>
  <a href="/urls/new" style="display: inline-block; margin-bottom: 20px">
    <h3> Create new TinyURL </h3>
  </a>
<% } else { %>
  <h3> 😐 Please
    <a class="btn btn-danger" href="/register" role="button"> Register </a> or
    <a class="btn btn-danger" href="/login" role="button"> Login </a>
    ...
  </h3>
  <br>
<% } %>